
<div class="container-fluid">

	<div class = "row detail_lecture_row">
		<div class="col-md-3 "></div>

		<div class="col-md-6 detail_lecture_box">
			
			<div class = "professor_section">
				<h3 class="inline-blk"> <%= @lecture.subject %> </h3> <span><%= @lecture.professor %> 교수님</span>
			</div>

			<!-- 1번째 줄 -->

				<div class = "total_star" style = "float:left">
					<div class = "left" style = "padding-right:10px;">
						총평
					</div> 
					
					<div class = "right">
						<%= @lecture.acc_total.round(2)%>
					</div>

					<div class = "valuation_star" >
						<%= render 'shared/show_average_star', :var => @lecture.acc_total %>
					</div>

				</div>

				<div class = "valuation_section">
					<div class = "left">
						난이도
					</div>
					<div class = "right">
						<%= @lecture.acc_level.round(2) %>
					</div>
					<div class = "progress" id = "acc_progress">
						<%= render 'shared/show_average_bar', :var => @lecture.acc_level, color: "info"%>
					</div>


				</div>

			<!-- 1번째 줄 -->


			<!-- 2번째 줄 -->
				<div class = "valuation_section">
					<div class = "left">
						학점
					</div>

					<!-- <div style = "margin-left:10px; float:right;"> -->
						<!--%= @lecture.acc_grade %-->
					<div class = "right">
						<%= @lecture.acc_grade.round(2) %>
					</div>

					<div class = "progress" id = "acc_progress">
						<%= render 'shared/show_average_bar', :var => @lecture.acc_grade, color: "success"%>
					</div>

				</div>

				<div class = "valuation_section">
					<div class = "left">
						공부양
					</div>
					
					<div class = "right">
						<%= @lecture.acc_workload.round(2) %>
					</div>

					<div class = "progress" id = "acc_progress">
						<%= render 'shared/show_average_bar', :var => @lecture.acc_workload, color: "warning"%>
					</div>
					
				</div>

			<!-- </div> -->
			<!-- 2번째 줄 -->


				<div class = "valuation_section">
					<div class = "left">
						과제양
					</div>

					<div class = "right">
						<%= @lecture.acc_homework.round(2) %>
					</div>

					<div class = "progress" id = "acc_progress">
						<%= render 'shared/show_average_bar', :var => @lecture.acc_homework, color: "danger"%>
					</div>
					
				</div>

				<div  class = "valuation_section">
					<div class = "left">
						성취감
					</div>
					<div class = "right">
						<%= @lecture.acc_achievement.round(2) %>
					</div>
					<div class = "progress" id = "acc_progress">
						<%= render 'shared/show_average_bar', :var => @lecture.acc_achievement, color: "info"%>
					</div>
					
				</div>



			<% if current_user.valuations.find_by(lecture_id: @lecture.id) %>
				<div class = "btn"> 평가 하셨습니다. </div>
			<% else %>
				<%= link_to '평가하기',  writtingform_lecture_path(@lecture), class: "btn"%>
			<% end %>

		</div><!-- /.col-md-6 -->

		
	</div>
</div>














  <% @lecture.valuations.each do |v| %>
	<div class = "row">
		
		
		<div class = "col-md-9 col-md-offset-3">
    		<%= render 'static_pages/display_lectures', :v => v %>
		</div>
    	
    </div>
    
  <% end %> 


