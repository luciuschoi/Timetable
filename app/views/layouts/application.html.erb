<!DOCTYPE html>
<html>
<head>
  <title>TimetableApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
      </script>
      <![endif]-->
    </head>
    <body>
      <div id="fb-root"></div>
      <script>(function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/ko_KR/sdk.js#xfbml=1&version=v2.4&appId=851870488230120";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script>



      <div class="row">
       <div class="col-md-1"></div>
       <div class="col-md-10">
         <nav class="navbar navbar-default">
          <div class="container-fluid">

           <div class="col-md-1"></div>
           <div class="col-md-10">
      <!--   <p class="navbar navbar-left" id= 'sejonglogo'>
        <%= image_tag("sejong.gif", height: '60', with: '30') %>
      -->


      <p class="navbar-text"><a href="/" class="navbar-link">아뭐듣</a></p>
      <% if current_user %>
      <p class="navbar-text navbar-right">
        <% unless current_user.nickname.nil? %>
          Welcome <strong><%= link_to current_user.nickname, edit_user_path(current_user) %>  </strong>!</p>
        <p class="navbar-text navbar-right"> <%= link_to "Sign out", signout_path, id: "sign_out" %></p>
        <% end %>
        <% else %>

        <p class="navbar-text navbar-right">
         <%= link_to "Facebook login", "/auth/facebook", id: "sign_in" %>  </p>
<!--<div class="fb-login-button navbar-right" data-max-rows="1" data-size="large" data-show-faces="false" data-auto-logout-link="true"></div>
-->
<% end %>
</div>
<div class="col-md-1"></div>


</div><!-- /.container-fluid -->

</nav>


</div><!-- /.col-md-8 -->


<div class="col-md-1"></div>


</div> <!-- /.row --> 
<!-- flash 메세지 출력 -->  
<% flash.each do |message_type, message| %>
<div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<%= yield %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= debug(params) if Rails.env.development? %>

  </div> 
  <div class="col-md-3"></div>
</div>


</body>
</html>
