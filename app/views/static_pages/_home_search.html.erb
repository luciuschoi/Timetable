<script>
function showLecture(lec_num)
  {
      <% if user_login? %>
        <% if current_user.valuations.count>=3 %>
          window.location="/lectures/"+lec_num.toString()
         <% else %>
         window.location="<%=forcingwritting_url%>"
         <% end %>  
       <% else %>
          $.fancybox({
            type: 'iframe',
            href: '/forcinglogin',
              'scrolling' : 'yes',
                'padding' : 20,
                'width'   :1000,
                'height'  :500,
                'transitionIn'    :    'none',
                'transitionOut'    :    'none',
                'speedIn'        :    400,
                'speedOut'        :    200,
                'autoDimensions'  : false,
                'overlayShow'    :    true

          });
       <% end %>        
  }

</script>

