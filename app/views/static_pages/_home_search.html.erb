<script>
  function showLecture(lec_num)
  {
  <% if user_login? %>
      $.fancybox({
        type: 'iframe',
        href: '/lectures/'+lec_num.toString(),
          'scrolling' : 'yes',
            'padding' : 20,
            'width'   :1200,
            'height'  :600,
            'transitionIn'    :    'none',
            'transitionOut'    :    'none',
            'speedIn'        :    400,
            'speedOut'        :    200,
            'autoDimensions'  : false,
            'overlayShow'    :    true

      });
   <% else %>
            window.location="/auth/facebook"
   <% end %>        
  }
</script>
