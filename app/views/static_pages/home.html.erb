          <%= submit_tag "찾아줘!", :subejct => nil %>
       
      <% end %>
     </div>
     <br><br>
     <%= render 'home_daemoon'%>
      <div id="lecturelist">
            <% if params[:search] %> 
            <%= render 'home_search' %>
            <% else %>
            <%= render 'home_user' %>
            <%end%>
    </div>
      