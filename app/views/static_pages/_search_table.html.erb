<% if !lectures.nil? %>
    <% if lectures.nil? %>
      <div> 검색결과가 없습니다.. </div>

    <% else %>
        <% lectures.each do |lec| %>
                 <div class="list-group lec_<%= lec.id%>">
                    <h4 class = "subject"> <%=lec.subject %>
                        <span style="float:right;"> 
                          <a data-toggle="tooltip" class="tooltipLink" data-original-title="학생들이 담은 과목입니다."> 
                        <i class="glyphicon glyphicon-user"> </i>
                          </a>
                        </span>
                    </h4>
                      

                    <span class = "professor"><%= lec.professor %> / </span>
                    <span class = "place"> <%=lec.place%> </span>       
                    <span class = "lecture_time" style = "display:none"><%= lec.lecturetime %></span>             
                  </div>
          
        <% end %>
       
      <%= will_paginate lectures, :class=>'paginate'%>
    <% end %>
<% end %>


