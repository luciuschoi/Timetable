<%unless @lectures.nil?%> 
<%if current_page? controller: 'static_pages', action:'home' %>
    <div class = "row">
      <div class = "col-sm-5 col-sm-offset-3" style = "padding-top : 15px">
        <div class= "dropdown_box">
          <h3 style = "display : inline">전공별 검색</h3>
          <%= render 'dropdown_btns_home'%>
        </div>
      </div>
    </div> 
<%elsif current_page? controller: 'static_pages', action:'forcingwritting'%>
     <div class = "row">
      <div class = "col-sm-5 col-sm-offset-3"  style = "padding-top : 15px">
        <div class= "dropdown_box">
          <h3 style = "display : inline">전공별 검색</h3>
          <%= render 'static_pages/dropdown_btns_forcing'%>
        </div>
      </div>
    </div>      
<%end%>



<div class = "container">
  <div class = "row">
    <div class="col-sm-4 col-sm-offset-2" style="margin-left: 34%;">
     
      </div>

    <div class="col-sm-8 col-sm-offset-2">
      <div class = "table-responsive" style = "font-size:13px;margin-top:-10px;">
      <font color="blue"><%=@lectures.count %>개 </font> 검색결과
      <div class ="search_box">
        <table class="table nogap">
               <thead>
             <tr align="center" class = "tr_style">

               <th width="10%" class = "text_gray">학기</th>
               <th width="20%" class = "text_gray">과목명</th>
               <th width="15%" class = "text_gray">교수</th>
               <th width="35%" class = "text_gray">평균평점</th>
               <th witdh="10%" class = "text_gray">평가수</th>
              <%if current_page? controller: 'static_pages', action:'home' %>
                 <th witdh="5%" class = "text_gray">열람하기</th>
              <%elsif current_page? controller: 'static_pages', action:'forcingwritting'%>
                 <th witdh="5%" class = "text_gray">평가하기</th>
              <%end%>
             </tr>
             </thead>
           <tbody></tbody>   
     
        <% @lectures.each do |lec| %>
           <%if current_page? controller: 'static_pages', action:'home' %>
                <tr class="lovelyrow" onclick="showLecture(<%=lec.id%>)" >
            <%elsif current_page? controller: 'static_pages', action:'forcingwritting'%>
                <tr class="lovelyrow" onclick="window.location='<%=writtingform_lecture_url(lec)%>'">
            <%end%>     
          <td id="tb_unspot">준비중</td>
           <td id="tb_spot"><%= lec.subject%></font></td>
          <td id="tb_unspot" ><%=lec.professor%> </td>  
          <td id="total_spot" >
              <div id="div_total">
              <% if lec.acc_total==0 %>
                평가없음
              <% else %> 
                <%= lec.acc_total.round(2) %>
                </div>
                <%= render 'shared/show_average_star',:var=> lec.acc_total%>
              <% end %> 
          </td>
          
          <td id="tb_unspot" ><%=lec.valuations.count%></td>
          <%if current_page? controller: 'static_pages', action:'home' %>
                 <td witdh="5%" class = "btn btn_look">열람하기</th>
          <%elsif current_page? controller: 'static_pages', action:'forcingwritting'%>
                 <td witdh="5%" class = "btn btn_valuation">평가하기</th>
          <%end%>

        </tr>

           <% end %>
            </tbody>

            </table>

    </div>      
        <% if @lectures.count ==0 %> 
          <font color="gray"><h3>검색 결과가 없습니다. </h3></font>
        <%end %>
        
  </div>

     
       <div align='center'>   
         <%= will_paginate @lectures %>
       </div>
 </div>
<% end %> 
